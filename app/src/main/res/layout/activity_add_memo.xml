<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaewanlee.mapmemo.product.example.jaewanlee.mapmemo.AddMemoView.AddMemoActivity"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="162dp">
        <fragment
            android:id="@+id/add_memo_map"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:background="#00000000">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/testgradation"
                android:scaleType="fitXY"
                android:id="@+id/add_memo_title_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000">
                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_back_white"
                    android:background="#00000000"
                    android:layout_marginTop="12dp"
                    android:id="@+id/add_memo_back"

                    />
                <EditText
                    android:layout_marginTop="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:text="이름"
                    android:textColor="#ffffff"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:background="#00000000"
                    android:id="@+id/add_memo_title"/>
            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingTop="7dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="19dp"
            android:id="@+id/add_memo_create_date_textView"
            android:text="2017.08.16"
            android:layout_marginRight="9dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="음식점"
            android:textSize="13sp"
            android:textColor="#000000"
            android:id="@+id/add_memo_categpry"/>

        <TextView
            android:id="@+id/add_memo_addr"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="13sp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:singleLine="true"
            android:text="서울 관악구 남현동 1887866"
            android:textColor="#000000"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#23000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="이곳에 메모해주세요"
        android:textSize="14sp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="14dp"
        android:background="#ffffff"
        android:id="@+id/add_memo_text"
        android:textColor="#000000"/>

</LinearLayout>
