<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyword_search_result_list_relatvielayout"
    android:layout_width="match_parent"
    android:layout_height="60dp"

    >

    <ImageView
        android:id="@+id/keyword_search_result_cardview_category_text"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:alpha="0.38"
        android:background="#ffffff"
        android:paddingBottom="18dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="18dp"
        android:src="@drawable/ic_category_restaunrant" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/keyword_search_result_cardview_category_text"
        android:background="@drawable/keyword_search_recycler_view_underbar"
        android:orientation="vertical"
        android:paddingRight="12dp"
        android:paddingTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="16.5dp">

            <TextView
                android:id="@+id/keyword_search_result_cardview_name_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="검색 결과 이름"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/keyword_search_category_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="카테고리"
                android:textSize="9sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/keyword_search_result_cardview_addr_text"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="29.5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="검색 결과 주소"
            android:textColor="#7c7c7c"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_memo_view" />

    </RelativeLayout>

</RelativeLayout>