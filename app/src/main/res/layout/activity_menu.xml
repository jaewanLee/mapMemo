<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_bg_color"
    tools:context="com.example.jaewanlee.mapmemo.HomeView.MenuActivity">

    <include layout="@layout/header_layout"/>

    <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/header_title"
                android:layout_marginTop="72dp"
                android:background="@drawable/ic_default_user"
                android:layout_centerHorizontal="true"
                android:id="@+id/menu_profile_image"/>
        <RelativeLayout
            android:id="@+id/profile_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_profile_image">

            <TextView
                android:textSize="14sp"
                android:gravity="left"
                android:text="@string/user_profile_name_title"
                android:layout_marginTop="32dp"
                android:layout_marginLeft="16dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:id="@+id/profile_mid_layer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/user_profile_name"
                    android:textSize="14sp"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_profile_email"
                    android:textSize="14sp"
                    android:gravity="right"
                    android:textColor="@color/setting_hint_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_below="@+id/user_profile_email"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/profile_cancel_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cancel_button_title"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/profile_done_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="@string/modify_done_button_title"
                            android:textColor="@color/black"
                            android:layout_weight="1"/>
                    </LinearLayout>
            </RelativeLayout>
            <ImageVie
                android:id="@+id/profile_line_imgae"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_line_color"
                android:layout_below="@+id/profile_mid_layer"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                />

            <RelativeLayout
                android:id="@+id/setting_layer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_line_imgae">

                <TextView
                    android:id="@+id/setting_sub_title"
                    android:textSize="14sp"
                    android:text="@string/setting_sub_title"
                    android:gravity="left"
                    android:textColor="@color/setting_sub_title_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="ian_hodge@ab180.co"
                    android:id="@+id/menu_userId_TextView"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Cancle"
                    android:id="@+id/menu_cancle_button"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="OK"
                    android:id="@+id/menu_ok_button"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type something"
                android:id="@+id/menu_type1_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type something"
                android:id="@+id/menu_type2_button"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type something"
                android:id="@+id/menu_type3_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="LockScreen"
                android:id="@+id/menu_Lockscreen_Switch"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Type something"
                android:id="@+id/menu_type5_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="version 1.1.0" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:text="dev:ian_hodge / design:hipzoep" />
        </LinearLayout>

</RelativeLayout>
