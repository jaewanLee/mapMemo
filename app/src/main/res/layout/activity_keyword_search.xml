<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaewanlee.mapmemo.product.example.jaewanlee.mapmemo.KeywordSearchView.KeywordSearchActivity"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#eaeaea">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f2f2f2"
        android:paddingRight="20dp"
        android:paddingLeft="10dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/keyword_search_back_btn"
            android:src="@drawable/ic_action_back"
            android:background="#00000000"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:hint="Search"
            android:id="@+id/keyword_search_search_editText"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:id="@+id/keyword_search_recyclerView"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
