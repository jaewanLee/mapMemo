<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linear_shadow_5">

        <ImageButton
            android:id="@+id/keyword_search_back_btn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="#00000000"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_arrow_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/keyword_search_search_editText"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:hint="Search"
                android:imeOptions="actionSearch"
                android:gravity="top"
                android:paddingTop="13dp"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp"
                android:paddingRight="5dp"
                android:background="@null"
                android:layout_marginLeft="16dp"/>

            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10.5dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cancel"
                android:id="@+id/keyword_search_cancle_btn"/>
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/keyword_search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
>

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
