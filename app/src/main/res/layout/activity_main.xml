<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start"
    android:fitsSystemWindows="true">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:name="com.google.android.gms.maps.MapFragment"
            android:id="@+id/main_map_replace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/main_fuctionTool_LinearLayout"
            android:layout_width="344dp"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                >

                <ImageButton
                    android:id="@+id/main_menu_ImageButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_navdraw_byn2" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/main_search_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="28.5dp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:hint="무엇을 검색할까나"
                        android:gravity="bottom"
                        android:background="#ffffffff"
                        />

                    <ImageButton
                        android:id="@+id/main_erase_ImageButton"
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:src="@drawable/main_search_history_btn" />

                </FrameLayout>


            </LinearLayout>



        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_currentLocation_floatButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="93dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@android:drawable/ic_menu_directions" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_memoList_Button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="21dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@android:drawable/ic_menu_directions" />

        <LinearLayout
            android:id="@+id/main_memoInfo_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_gravity="bottom"
            android:background="@drawable/main_memodetail_round"
            android:orientation="vertical"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="24dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="21dp">
                <TextView
                    android:id="@+id/main_category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="음식점"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginRight="8dp" />
                <TextView
                    android:id="@+id/main_createDate_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2017.09.01"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:singleLine="true"/>


            </LinearLayout>

            <TextView
                android:id="@+id/main_memoTitle_textView"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="가나다라마바사아자 가나다라"
                android:textSize="14sp"/>


                <TextView
                    android:id="@+id/main_memoContent_textView"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="14sp"
                    android:lines="3"
                    android:text="여기 지나가면 꼭 먹고 가야겠다 메모했다가 가야지 가나여기 지나가면 꼭 먹고 가야겠다 메모했다가 가야지 가나\n여기 지나가면 꼭 먹고 가야겠다 메모했다가 가야지 가나" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/main_call_imageButton"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:background="#00000000"
                    android:src="@drawable/main_call_btn" />

                <ImageButton
                    android:id="@+id/main_share_imageButton"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_share_btn" />
            </LinearLayout>

        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_memoDetail_textView"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="137dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@android:drawable/ic_menu_directions"/>


        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:id="@+id/main_progressbar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:mlpb_arrow_height="5dp"
            app:mlpb_arrow_width="10dp"
            app:mlpb_enable_circle_background="true"
            app:mlpb_progress_color="#2b0000"
            app:mlpb_progress_stoke_width="5dp"
            app:mlpb_progress_text_color="#000000"
            app:mlpb_show_arrow="true" />
    </FrameLayout>


</LinearLayout>
