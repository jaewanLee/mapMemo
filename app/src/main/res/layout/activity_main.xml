<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/main_topbackground_head">



        <ImageButton
            android:id="@+id/main_fullscreen_ImageButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/main_collapse__header_btn" />

        <ImageButton
            android:id="@+id/main_close_ImageButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/main_close_header_btn" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_map_replace"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </FrameLayout>

        <LinearLayout
            android:id="@+id/main_fuctionTool_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@drawable/main_topbackground_body"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="23dp">

                <ImageButton
                    android:id="@+id/main_menu_ImageButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="#bebebe"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_navdraw_byn2" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/main_search_editText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:imeOptions="actionSearch"
                        android:background="@drawable/main_searchbar"
                        />

                    <ImageButton
                        android:id="@+id/main_history_ImageButton"
                        android:layout_width="37dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="2dp"
                        android:background="#ffffff"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_search_history_btn" />

                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="25dp">

                <Button
                    android:id="@+id/main_memoList_Button"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/main_memolist_btn" />

                <ImageButton
                    android:id="@+id/main_search_ImageButton"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/main_searsh_btn" />
            </LinearLayout>


        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_currentLocation_floatButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"
            android:clickable="true"
            app:srcCompat="@android:drawable/ic_menu_directions" />

        <LinearLayout
            android:id="@+id/main_memoInfo_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_gravity="bottom"
            android:background="@drawable/main_bottom_contentsbackground"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp">

                <TextView
                    android:id="@+id/main_createDate_textView"
                    android:layout_width="66dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="22dp"
                    android:text="2017.09.01"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/main_category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="음식점"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_memoTitle_textView"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="가나다라마바사아자 가나다라"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="18dp">

                <TextView
                    android:id="@+id/main_memoContent_textView"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:singleLine="true"
                    android:text="여기 지나가면 꼭 먹고 가야겠다 메모했다가 가야지 가나" />

                <Button
                    android:id="@+id/main_memoDetail_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:singleLine="true"
                    android:text="더보기"
                    android:textColor="#010081"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/main_call_imageButton"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:background="#00000000"
                    android:src="@drawable/main_call_btn" />

                <ImageButton
                    android:id="@+id/main_share_imageButton"
                    android:layout_width="156dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:scaleType="fitCenter"
                    android:src="@drawable/main_share_btn" />
            </LinearLayout>

        </LinearLayout>


        <com.lsjwzh.widget.materialloadingprogressbar.CircleProgressBar
            android:id="@+id/main_progressbar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            app:mlpb_arrow_height="5dp"
            app:mlpb_arrow_width="10dp"
            app:mlpb_enable_circle_background="true"
            app:mlpb_progress_color="#2b0000"
            app:mlpb_progress_stoke_width="5dp"
            app:mlpb_progress_text_color="#000000"
            app:mlpb_show_arrow="true" />
    </FrameLayout>


</LinearLayout>
